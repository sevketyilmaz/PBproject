<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.ActionBar.TranslucentStatus"> -->

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <style name="AppTheme.TextAppearanceRegister">
        <item name="android:textColor">@color/material_login_login_text_color</item>
        <item name="colorControlNormal">@color/material_login_login_text_color</item>
        <item name="android:textColorHint">@color/material_login_login_text_color</item>
        <item name="colorControlActivated">@color/material_login_login_text_color</item>
        <item name="colorControlHighlight">@color/material_login_login_text_color</item>
    </style>

    <style name="AppTheme.TextAppearanceLogin">
        <item name="android:textColor">@color/material_login_register_text_color</item>
        <item name="colorControlNormal">@color/material_login_register_text_color</item>
        <item name="android:textColorHint">@color/material_login_register_text_color</item>
        <item name="colorControlActivated">@color/material_login_register_text_color</item>
        <item name="colorControlHighlight">@color/material_login_register_text_color</item>
    </style>

    <style name="AppTheme.TextAppearanceLoginError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_login_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextAppearanceRegisterError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_register_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
